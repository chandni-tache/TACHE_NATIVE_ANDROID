<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp">

    <TextView
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/item_survey_profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="18dp"
            app:civ_border="false" />

        <TextView
            android:id="@+id/item_survey_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/item_survey_profile_image"
            android:text="Mahindra &amp; Mahindra"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_survey_brand_name"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/item_survey_profile_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Take a test drive and rate customer care service at showroom"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_survey_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_survey_profile_image"
            android:layout_alignRight="@id/item_survey_profile_image"
            android:layout_below="@id/item_survey_profile_image"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="00 : 10 : 32"
            android:textColor="@color/textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_survey_people_responded_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_survey_profile_image"
            android:layout_toRightOf="@id/item_survey_profile_image"
            android:gravity="center_vertical"
            android:text="40"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_survey_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_survey_profile_image"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@id/item_survey_people_responded_count"
            android:gravity="center_vertical"
            android:text="/"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_survey_people_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_survey_profile_image"
            android:layout_toRightOf="@id/item_survey_slash"
            android:gravity="center_vertical"
            android:text="60"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_survey_profile_image"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/item_survey_people_total_count"
            android:gravity="center_vertical"
            android:text="People Responded"
            android:textSize="12sp"
            android:visibility="invisible" />

        <com.tache.views.RupeeTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_survey_profile_image"
            android:layout_marginRight="2dp"
            android:text="50"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>