<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/direct"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:background="@drawable/round_item_mission"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_mission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:text="Take a test drive and rate customerds"
            android:textColor="@color/textColorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/item_mission_profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/item_mission_title"
            android:layout_marginRight="16dp"
            android:src="@drawable/background"
            app:civ_border="false" />

        <TextView
            android:id="@+id/item_mission_brand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mission_title"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/item_mission_profile_image"
            android:text="Mahindra &amp; Mahindra"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_mission_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mission_brand_name"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/item_mission_profile_image"
            android:drawableLeft="@drawable/ic_location_on_light_gray_18dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="Location"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_mission_date_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_mission_location"
            android:layout_toRightOf="@id/item_mission_profile_image"
            android:drawableLeft="@drawable/ic_date_range_light_gray_18dp"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="400 friends"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_mission_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_mission_date_range"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/item_mission_currency"
            android:text="50"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_mission_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_mission_date_range"
            android:layout_marginTop="2dp"
            android:text="@string/Rs"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>